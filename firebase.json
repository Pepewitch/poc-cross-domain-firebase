{
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
    "source": "functions"
  },
  "hosting": {
    "rewrites": [
      {
        "source": "/login",
        "function": "login"
      },
      {
        "source": "/status",
        "function": "status"
      }
    ],
    "ignore": ["frontend", "firebase.json", "**/.*", "**/node_modules/**"]
  }
}
