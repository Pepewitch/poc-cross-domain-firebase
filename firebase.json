{
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
    "source": "functions"
  },
  "hosting": {
    "rewrites": [
      {
        "source": "/signin",
        "function": "signin"
      },
      {
        "source": "/status",
        "function": "status"
      },
      {
        "source": "/signout",
        "function": "signout"
      },
      {
        "source": "/ping",
        "function": "ping"
      }
    ],
    "ignore": ["frontend", "firebase.json", "**/.*", "**/node_modules/**"]
  }
}